{
  "name": "oa2",
  "version": "0.1.0",
  "description": "OAuth 1/2 made simple",
  "main": "lib/oauth",
  "scripts": {
    "build": "rm -rf ./lib && babel src -d lib --ignore *.test.js",
    "coverage": "jest --coverage",
    "codacy": "npm run coverage && cat ./coverage/lcov.info | codacy-coverage && rm -rf ./coverage",
    "lint": "eslint --fix src",
    "prepublish": "npm run build",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SzybkiSasza/oa2.git"
  },
  "keywords": [
    "oauth",
    "auth",
    "authorization",
    "open"
  ],
  "author": "Bartosz Polanczyk",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SzybkiSasza/oa2/issues"
  },
  "homepage": "https://github.com/SzybkiSasza/oa2#readme",
  "dependencies": {
    "ajv": "^5.2.0",
    "axios": "^0.16.2",
    "axios-retry": "^2.0.1",
    "babel-runtime": "^6.23.0",
    "debug": "^2.6.8",
    "lodash": "^4.17.4",
    "qs": "^6.5.0",
    "retry": "^0.10.1",
    "urijs": "^1.18.10"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.5.2",
    "codacy-coverage": "^2.0.2",
    "eslint": "^4.1.1",
    "eslint-config-google": "^0.8.0",
    "jest": "^20.0.4"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "node_modules",
      "lib"
    ]
  }
}
